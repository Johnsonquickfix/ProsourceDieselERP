@{
    ViewBag.Title = "New Commercial Proposal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <h2>Edit Commercial Proposal</h2>
</div>
<section class="content section-content massstocktransfer commercial_proposal mt-1">
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab_1" data-toggle="tab">Commercial Proposal</a></li>
            <li><a href="#tab_2" data-toggle="tab">Contacts/Addresses</a></li>
            <li><a href="#tab_3" data-toggle="tab">Notes<span class="badge badge-danger">4</span></a></li>
            <li><a href="#tab_4" data-toggle="tab">Linked files<span class="badge badge-danger">4</span></a></li>
            <li><a href="#tab_5" data-toggle="tab">Log</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                <div class="box box-primary">
                    <div class="box-header">
                        <div class="d-flex proposal-top">
                            <div class="edit-proposal-box">
                                <div class="proposal-box">
                                    <input type="file" name="file" id="proposal" class="inputfile">
                                    <label for="proposal"><i class="fa fa-edit"></i></label>
                                </div>
                                <div class="edit-proposal-texts">
                                    <h3 class="box-title">PROV2108-00005</h3>
                                    <p>Ref. customer<button><i class="fas fa-pencil-alt"></i></button></p>
                                    <p>Vendor: Lyl texttile(LYT)(Other proposals)</p>
                                </div>
                            </div>
                            <div class="back-to-list">
                                <p><button class="btn no-btn">Back to list</button></p>
                                <p><button class="btn btn-danger">Signed(needs billing)</button></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row rowbox proposal-row">
                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Discounts</label>
                                    <div class="col-md-8">
                                        <p>This customer has a default discount of 10%</p>
                                        <span class="form-info">The name is how it appears on your site.</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Date of proposal</label>
                                    <div class="col-md-8">
                                        <p>07/26/2021</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Validity ending date</label>
                                    <div class="col-md-8">
                                        <p>08/10/2021</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Payment Terms</label>
                                    <div class="col-md-8">
                                        <p>30 days of month-end</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Payment Type</label>
                                    <div class="col-md-8">
                                        <p>Check</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Delivery date</label>
                                    <div class="col-md-8">
                                        <p><i class="fas fa-pencil-alt"></i>07/31/2021</p>
