                            <span title="Click Here To Change Status Of Leave After Selecting Checkbox" data-placement="bottom" data-toggle="tooltip"><button type="button" id="btnChangePending" class="btn btn-primary btn-flat button">Change</button></span>
                        </div>
                    </div>
                </div>
                <!-- end top-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="PendingEmployeeListdata" class="table-blue table check-table table-bordered table-striped dataTable " width="100%">
                                            <thead>
                                                <tr>
                                                    @*<th><input type="checkbox" name="checkAll" id="checkAll"><label></label></th>*@
                                                    <th><input type="checkbox" name="checkAll2" id="checkAll2"><label></label></th>
                                                    <th>Id</th>
                                                    <th>Name</th>
                                                    <th>Leave Type</th>
                                                    <th>From</th>
                                                    <th>To</th>
                                                    <th>Days</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane" id="tab_3">
                <div class="user-top-section">
                    <div class="tablenav top tablenav-top2">
                        <div class="alignleft actions bulkactions">
                            <select class="form-control select2" id="ddlStatusReject" placeholder="Select User">
                                <option value="1">Approved</option>
