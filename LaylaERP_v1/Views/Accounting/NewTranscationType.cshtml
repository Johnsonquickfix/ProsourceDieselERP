
@{
    ViewBag.Title = "NewTranscationType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/AdminLTE-3.1.0/datatables/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
@*datatables js*@
<script src="~/Content/AdminLTE-3.1.0/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/js/dataTables.bootstrap.min.js" type="text/javascript"></script>

<input type="hidden" id="hfEdit" value="" />
<div class="page-title">
    <h2>Transcation Type<span class="text-gray"></span></h2>
</div>
<section class="content section-content employees-section">
    <div class="row">
        <div class="box box-primary" id="AddAccountCategory">
            <div class="box-body">
                <div class="col-sm-6">
                    <input type="hidden" id="hfid" />
                    <div class="form-group">
                        <label for="Transcationtype">Transaction Type<span style="color:red">*</span></label>
                        <select class="form-control select2" id="ddltranscation">
                            <option value="-1">Please select transaction type</option>
                            <option value="1">Bill</option>
                            <option value="2">Expense</option>
                            <option value="3">Check</option>
                            <option value="4">Pay Down Credit Card</option>
                            <option value="5">Vendor Credit</option>
                            <option value="6">Bill Payment (check)</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="description">Account type</label><span style="color:red">*</span><br />
                        <select class="form-control select2" id="ddlaccount"></select>
                    </div>
                    <div class="box-footer">
                        <div class="text-left">
                            <span title="Click here to save transcation type" data-placement="left" data-toggle="tooltip"><input type="button" class="btn btn-danger" id="btnAdd" value="Save"></span>
                            <span title="Click here to update transcation type" data-placement="left" data-toggle="tooltip"><input type="button" class="btn btn-danger" id="btnUpdate" value="Update"></span>
                            <span title="Click here to reset" data-placement="left" data-toggle="tooltip"><input type="button" class="btn btn-danger" id="btnReset" value="Reset"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-body">
                    <table id="TranscationTypeData" class="table-blue table check-table table-bordered table-striped dataTable " width="100%">
                        <thead>
                            <tr>
                                <th class="text-left">Id</th>
                                <th class="text-left">Transaction Type</th>
                                <th class="text-left">Account Type</th>
                                @*<th class="text-left">Action</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $(".select2").select2(); accountingAccount();
        $("#loader").hide();
        $("#btnUpdate").hide();
        $(document).on('click', "#btnAdd", function () {
            AddTranscationType();
        })
        $(document).on('click', "#btnReset", function () {
            ResetBox();
            $("#btnAdd").show();
            $("#btnUpdate").hide();
        })
        $(document).on('click', "#btnUpdate", function () {
            UpdateFiscalYear();
        });

        TranscationTypeList();
    });
    //page leave message start
    //function isEdit(val) {
    //    localStorage.setItem('isEdit', val ? 'yes' : 'no');
    //}
    // page leave message end
</script>

<script>
    $(function () {
        $("#txtstartdate").datepicker({
            format: 'mm-dd-yyyy',
        })
        //.datepicker("setDate", 'now');

        $("#txtenddate").datepicker({
            format: 'mm-dd-yyyy',
        });
    });
</script>
<script src="@Url.Content("~/js/Accounting/TranscationType.js?v="+DateTime.Now.ToString("ddMMyyyymmss")+"")" asp-append-version="true"></script>
