                                        <option>1030 - Savings Account</option>
                                        <option>1040 - Investments and Securities</option>
                                    </select>
                                </th>
                                <th><input type="text" class="form-control" /></th>
                                <th>&nbsp;</th>
                                <th>
                                    <div class="ws_nowrap">
                                        <a href="#">
                                            <i class="fa fa-search"></i>
                                        </a>
                                        <a href="#">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th class="text-left">Account number</th>
                                <th class="text-left">Label</th>
                                <th class="text-left">Short label</th>
                                <th class="text-left">Parent account</th>
                                <th>Group of account</th>
                                <th>Activated</th>
