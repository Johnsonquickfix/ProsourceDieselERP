@{
    ViewBag.Title = "Accounting Journal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-title">
    <h2>List of the accounting accounts<span class="text-gray">(137)</span></h2>
    <div class="ml-auto">
        <a class="btn no-btn">Back to List</a>&nbsp;&nbsp;<button class="btn btn-danger">Add an Account</button>
    </div>
</div>
<section class="content section-content journal-section table-design">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <form class="form-inline">
                        <div class="form-group mb-2">
                            <label class="control-label">Select active chart of accounts: </label>
                        </div>
                        <div class="form-group mx-sm-3 mb-2">
                            <select class="form-control">
                                <option>US-BASE - USA basic chart of accounts - (US)</option>                                                              
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger">Change and Load</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary table-design not-fixed">
                <div class="box-body">
                    <table class="inventory-table table-blue table check-table table-bordered table-striped dataTable">
