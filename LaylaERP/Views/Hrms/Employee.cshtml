<script type="text/javascript">
    $(document).ready(function () {
        $(document).on('click', "#btnSave", function () {
            AddEmployee();
        });

        $(".select2").select2();
        setTimeout(function () { $(".select2").select2(); }, 2000);
    })

</script>
