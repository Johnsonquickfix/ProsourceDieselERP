
@{
    ViewBag.Title = "NewOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/AdminLTE-3.1.0/smartwizard/smart_wizard_all.css" rel="stylesheet" />

<section class="content-header">
    <h1 class="page-heading">
        Add New Order
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-shopping-cart"></i> Home</a></li>
        <li><a href="#">Orders</a></li>
        <li class="active">Add New Order</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Order #@ViewBag.OrderNo detail</h4>
                    <div class="box-body no-padding">
                        <div class="row">
                            <div class="col-md-4">
                                <h5>General</h5>
                                <div class="form-group">
                                    <label>Create Date</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input id="txtLogDate" data-auto-update-input="false" readonly="readonly" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Status</label>
                                    <select class="form-control select2" id="ddlStatus" placeholder="Select Status" style="width: 100%;">
                                        <option value="wc-pending" selected="selected">Pending payment</option>
                                        <option value="wc-processing">Processing</option>
                                        <option value="wc-on-hold">On hold</option>
                                        <option value="wc-completed">Completed</option>
                                        <option value="wc-cancelled">Cancelled</option>
                                        <option value="wc-refunded">Refunded</option>
                                        <option value="wc-failed">Failed</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Customer</label>
                                    <select class="form-control select2" id="ddlUser" placeholder="Select Customer Email" style="width: 100%;">
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h5>Billing Address</h5>
                                <div class="form-group col-md-6">
                                    <input type="email" class="form-control" id="txtbillfirstname" placeholder="First Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="txtbilllastname" placeholder="Last Name">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtbillcompany" placeholder="Company">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtbilladdress1" placeholder="Enter Address Line 1">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtbilladdress2" placeholder="Enter Address Line 2">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="txtbillzipcode" placeholder="ZipCode / PostCode">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="txtbillcity" placeholder="Enter City">
                                </div>
                                <div class="form-group col-md-6">
                                    <select class="form-control select2" id="ddlbillcountry" placeholder="Country / Region" style="width: 100%;">
                                        <option value="">Select a country / region…</option>
                                        <option value="CA">Canada</option>
                                        <option value="US" selected>United States (US)</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <select class="form-control select2" id="ddlbillstate" placeholder="State / County" style="width: 100%;"></select>
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtbillemail" placeholder="Enter Email Address">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtbillphone" placeholder="Enter Phone/Mobile">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h5 class="font-weight-bold">Shipping Address</h5>
                                <div class="form-group col-md-6">
                                    <input type="email" class="form-control" id="txtshipfirstname" placeholder="First Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="txtshiplastname" placeholder="Last Name">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtshipcompany" placeholder="Company">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtshipaddress1" placeholder="Enter Address Line 1">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" id="txtshipaddress2" placeholder="Enter Address Line 2">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="txtshipzipcode" placeholder="ZipCode / PostCode">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" id="txtshipcity" placeholder="Enter City">
                                </div>
                                <div class="form-group col-md-6">
                                    <select class="form-control select2" id="ddlshipcountry" placeholder="Country / Region" style="width: 100%;">
                                        <option value="">Select a country / region…</option>
                                        <option value="CA">Canada</option>
                                        <option value="US" selected>United States (US)</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <select class="form-control select2" id="ddlshipstate" placeholder="State / County" style="width: 100%;"></select>
                                </div>
                                <div class="form-group col-md-12">
                                    <textarea class="form-control " id="txtCustomerNotes" placeholder="Customer notes about the order" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="box-body no-padding">
                        <div class="row">
                            <div class="col-sm-8 form-group">
                                <label class="col-sm-3 control-label text-right">Product</label>
                                <div class="col-sm-9 controls">
                                    <select class="form-control select2" id="ddlproduct" placeholder="Select Products" style="width: 100%;"></select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-responsive" id="divAddItemFinal">
                                    <table id="tblAddItemFinal" class="table table-striped table-bordered table-condensed table-hover total_data imagetable table-margin-bottom">
                                        <thead>
                                            <tr>
                                                <th class="text-center" style="width: 5%">Actions</th>
                                                <th style="width: 55%">Item</th>
                                                <th class="text-right" style="width: 10%">Sale Price</th>
                                                <th class="text-right" style="width: 10%">Quantity</th>
                                                <th class="text-right" style="width: 10%">Discount</th>
                                                <th class="text-right" style="width: 10%">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-horizontal bg-info font-bold">
                                    <div class="form-group">
                                        <label class="col-sm-10 control-label">Sub-Total</label>
                                        <div class="col-sm-2 controls text-right">
                                            <span id="SubTotal">0.00</span>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label class="col-sm-10 control-label">Discount</label>
                                        <div class="col-sm-2 controls text-right">
                                            <span id="discountTotal">0.00</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-10 control-label">Shipping</label>
                                        <div class="col-sm-2 controls text-right">
                                            <span id="shippingTotal">0.00</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-10 control-label">Shipping Tax</label>
                                        <div class="col-sm-2 controls text-right">
                                            <span id="shippingTaxTotal">0.00</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-10 control-label">Sales Tax</label>
                                        <div class="col-sm-2 controls text-right">
                                            <span id="salesTaxTotal">0.00</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-10 control-label">Order Total</label>
                                        <div class="col-sm-2 controls text-right">
                                            <span id="orderTotal">0.00</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Include SmartWizard JavaScript source -->
<script src="~/Content/AdminLTE-3.1.0/smartwizard/jquery.smartWizard.js"></script>
<script src="@Url.Content("~/js/Orders/NewOrder.js?v=" + DateTime.Now.ToString("ddMMyyyymmss"))" asp-append-version="true"></script>
<script type="text/javascript">

</script>
