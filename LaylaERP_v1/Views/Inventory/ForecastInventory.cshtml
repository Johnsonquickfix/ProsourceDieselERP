
@{
    ViewBag.Title = "ForecastInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/AdminLTE-3.1.0/datatables/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
@*datatables js*@
<script src="~/Content/AdminLTE-3.1.0/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/js/dataTables.bootstrap.min.js" type="text/javascript"></script>
<div class="page-title">
    <h2 class="page-heading">Forecast Inventory</h2>
</div>
<section class="content section-content neworder-section">
    <div class="row index_col_row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Vendor</label>
                <select class="form-control select2" id="ddlVendorList" placeholder="Select Vendor" style="width: 100%;"></select>
            </div>
        </div>
        <div class="col-md-3 text-center mt-25 d-flex">
            <button type="button" id="btnSearch" class="btn btn-danger">Search</button>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label></label>
                <input class="form-control" type="text" id="txtsaldate" style="display:none" />
            </div>
        </div>
    </div>
    <!-- end top-->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="dtForecastReportList" class="inventory-table table-blue table check-table table-bordered table-striped dataTable" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Product</th>
                                        <th>In Stock</th>
                                        <th>Previous Month Sale</th>
                                        <th>Projected Daily Velocity</th>
                                        <th>Remaining Days</th>
                                        <th>Run Out Date</th>
                                        <th>Projected Weekly Velocity</th>
                                        <th>Projected Monthly Velocity</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-sm-12 inventory-btn">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    })

    $(function () {
        $("#txtsaldate").datepicker({
            format: 'mm-dd-yyyy',
        }).datepicker("setDate", 'now');
    });

    $("#btnSearch").click(function () { ForeCastreport(); })
</script>
<script src="@Url.Content("~/js/Inventory/ForecastInventory.js?v="+DateTime.Now.ToString("ddMMyyyymmss")+"")" asp-append-version="true"></script>