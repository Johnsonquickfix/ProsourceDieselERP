
@{
    ViewBag.Title = "PurchaseOrderList";
}


<link href="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/AdminLTE-3.1.0/datatables/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
@*datatables js*@
<script src="~/Content/AdminLTE-3.1.0/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/js/dataTables.bootstrap.min.js" type="text/javascript"></script>

<div class="page-title">
    <h2 class="page-heading">Purchase Order List</h2><a href="../../PurchaseOrder/NewPurchaseOrder" class="btn btn-danger" id="btnAddVendor">New Purchase Order</a>
</div>
<section class="content section-content table-design customer-section">
    
    <div class="row">
        <div class="col-md-12">
            <div class="user-top-section">
                <div class="tablenav top tablenav-top2">
                    <div class="alignleft actions bulkactions">
                        <select class="form-control select2" id="ddlOrderStatus" placeholder="Select Status">
                            <option value="0">Select Status</option>
                            <option value="1">Draft</option>
                            <option value="3">Approved</option>
                            <option value="7">Canceled</option>
                            <option value="8">Refused</option>
                        </select>
                        <button type="button" id="btnChange" class="btn btn-primary btn-flat button">Change</button>
                    </div>
                    <div class="alignleft actions">
                        <select class="form-control select2" id="ddlSearchStatus" placeholder="Select User">
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                        <button type="button" id="btnSearch" class="btn btn-primary btn-flat button">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end top-->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="dtdata" class="inventory-table table-blue table check-table table-bordered table-striped dataTable " width="100%">
                                <thead>
                                    <tr>
                                        <th width="5%"><input type="checkbox" name="checkall" id="checkall" onClick="CheckAll();"><label></label></th>
                                        <th>PO No.</th>
                                        <th>Date</th>
                                        <th>Invoice No</th>
                                        <th>Vendor Name</th>
                                        <th>Address</th>
                                        <th>Zip Code</th>
                                        <th>Planned date of delivery</th>
                                        <th>Status</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-sm-8 inventory-btn">
                            <button type="button" id="btnSave" class="btn btn-danger" style="display:none">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>
<script src="@Url.Content("~/js/PurchaseOrder/PurchasePrint.js?v="+DateTime.Now.ToString("ddMMyyyymmss")+"")" asp-append-version="true"></script>
<script src="@Url.Content("~/js/PurchaseOrder/PurchaseOrderList.js?v="+DateTime.Now.ToString("ddMMyyyymmss")+"")" asp-append-version="true"></script>


