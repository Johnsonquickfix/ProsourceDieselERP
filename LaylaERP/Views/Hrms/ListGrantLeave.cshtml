                <!-- end top-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="RejectEmployeeListdata" class="table-blue table check-table table-bordered table-striped dataTable " width="100%">
                                            <thead>
                                                <tr>
                                                    <th><input type="checkbox" name="checkAll1" id="checkAll1"><label></label></th>
                                                    <th>Id</th>
                                                    <th>Name</th>
                                                    <th>Leave Type</th>
                                                    <th>From</th>
                                                    <th>To</th>
                                                    <th>Days</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
