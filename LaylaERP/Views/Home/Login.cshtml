@model LaylaERP.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Layla ERP | Log in</title>
    <link rel="icon" type="image/x-icon" href="~/Images/layla32.png">
    <link href="~/Content/AdminLTE-3.1.0/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- icheck bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/AdminLTE-3.1.0/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE-3.1.0/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/alert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/dx/dx.light.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/Content/AdminLTE-3.1.0/jquery/jquery.min.js"></script>
    <script src="~/Content/alert/sweetalert2.all.min.js"></script>
    <link href="~/Content/Style11.css" rel="stylesheet" />
    <link href="~/Content/Style12.css" rel="stylesheet" />
    <link href="~/css/login_style.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div id="a-page" class="login_box-section">
        <div class="a-section a-padding-medium auth-workflow main-login-box">
            <div class="login-inner-box">
                <div class="a-section a-spacing-none auth-navbar">

                    <div class="a-section a-spacing-medium a-text-center">

                        <a class="a-link-nav-icon" tabindex="-1" href="">
                            <img src="~/Images/layla1-logo.png" />
                        </a>
                    </div>
                </div>
                <div id="authportal-center-section" class="a-section">
                    <div id="authportal-main-section" class="a-section">
                        <div class="a-section auth-pagelet-container">
                            <form name="signIn" method="post" novalidate="" action="" class="auth-validate-form auth-real-time-validation a-spacing-none" data-fwcim-id="yvbVq8CQ">
                                <div class="a-box-inner a-padding-extra-large">
                                    <h1 class="a-spacing-small login-h1">
                                        User Login
                                    </h1>
                                    <!-- optional subheading element -->
                                    <div class="a-row a-spacing-base">
                                        <label for="ap_email" class="a-form-label" id="lblEmail">
                                            Enter User Email
                                            <input type="email" maxlength="128" id="txtUserId" name="Email" tabindex="1" class="a-input-text a-span12 auth-autofocus auth-required-field" value="david003">
                                        </label>
                                        <label for="ap_email" id="lblPasswod" class="a-form-label">
                                            Enter User Password
                                            <input type="password" maxlength="128" id="txturPassword" name="Pass" tabindex="1" class="a-input-text a-span12 auth-autofocus auth-required-field" value="Peter@007">
                                        </label>
                                    </div>
                                    <input type="hidden" name="create" value="0">
                                    <span class="btn btn-block login-continue">
                                        <span class="login-inner">
                                            <input id="btnLogin" tabindex="5" class="a-button-input" type="button" aria-labelledby="continue-announce">
                                            <span id="btnLogin" class="a-button-text" aria-hidden="true">
                                                Continue
                                            </span>
                                        </span>
                                    </span>
                                </div>
                                <div class="forgot-section">
                                    <div aria-live="polite" class="a-row a-expander-container a-expander-inline-container">
                                        <div aria-expanded="false" class="a-expander-content a-expander-inline-content">
                                            <a id="auth-fpp-link-bottom" class="a-link-normal" href="">
                                                Forgot Password
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <input name="metadata1" type="hidden" value="">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="a-section a-spacing-top-extra-large auth-footer main-login-footer">
                @*<div class="a-divider a-divider-section"><div class="a-divider-inner"></div></div>*@
                <div class="footer-menu-login">
                    <span class="auth-footer-seperator"></span>
                    <a class="a-link-normal" target="_blank" href="">
                        Conditions of Use
                    </a>
                    <span class="auth-footer-seperator"></span>
                    <a class="a-link-normal" target="_blank" href="">
                        Privacy Notice
                    </a>
                    <span class="auth-footer-seperator"></span>
                    <a class="a-link-normal" target="_blank" href="">
                        Help
                    </a>
                    <span class="auth-footer-seperator"></span>
                </div>
                <div class="a-section a-spacing-none a-text-center">
                    <span class="a-size-mini a-color-secondary">
                        © 2021, LaylaERP, Inc. or its affiliates
                    </span>
                </div>
            </div>
        </div>

        <div id="right-2">
        </div>

       
    </div>
    <div id="auth-external-javascript" class="auth-external-javascript" data-external-javascripts="">
    </div>

    <!-- cache slot rendered -->
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/AdminLTE-3.1.0/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminLTE-3.1.0/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/AdminLTE-3.1.0/adminlte.min.js"></script>

    <script src="@Url.Content("~/js/Users/UserLogin.js?v=" + DateTime.Now.ToString("ddMMyyyymmss"))" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '#btnLogin', function () {
                userAuthenticateLogin();
            });
        });
    </script>
</body>
</html>


