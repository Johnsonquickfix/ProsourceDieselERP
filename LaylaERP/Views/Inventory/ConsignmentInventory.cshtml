@{
    ViewBag.Title = "In-Hand Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.rangePicker = "/Content/AdminLTE-3.1.0/bower_components/bootstrap-daterangepicker/daterangepicker.css";
}

<link href="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/AdminLTE-3.1.0/datatables/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
@*datatables js*@
<script src="~/Content/AdminLTE-3.1.0/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/AdminLTE-3.1.0/datatables/DataTables-1.10.20/js/dataTables.bootstrap.min.js" type="text/javascript"></script>
<style>
    td.details-control {
        background: url('https://cdn.rawgit.com/DataTables/DataTables/6c7ada53ebc228ea9bc28b1b216e793b1825d188/examples/resources/details_open.png') no-repeat center center;
        cursor: pointer;
    }

    tr.shown td.details-control {
        background: url('https://cdn.rawgit.com/DataTables/DataTables/6c7ada53ebc228ea9bc28b1b216e793b1825d188/examples/resources/details_close.png') no-repeat center center;
    }
</style>
<div class="page-title">
    <h2 class="page-heading">In-Hand Inventory</h2>
</div>
<section class="content section-content table-design customer-section">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>SKU</label>
                <input type="text" class="form-control" id="txtsku" placeholder="SKU" maxlength="100">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Products</label>
                <select class="form-control select2" id="ddlProduct" placeholder="Select Products" style="width: 100%;"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Category</label>
                <select class="form-control select2" id="ddlCategory" placeholder="Select Category" style="width: 100%;"></select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                <input id="txtDate" data-auto-update-input="false" readonly="readonly" class="form-control">
            </div>
        </div>
        <div class="col-md-8 text-right">
            <button type="button" id="btnSearch" class="btn btn-danger">Search</button>
        </div>
    </div>
    <!-- end top-->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="dtdata" class="inventory-table table-blue table check-table table-bordered table-striped dataTable " width="100%">
                                <thead>
                                    <tr>
                                        <th style="width:10%">Parent ID</th>
                                        <th style="width:10%">ID</th>
                                        <th style="width:10%">Product Type</th>
                                        <th style="width:10%">SKU</th>
                                        <th style="width:40%">Product Name</th>
                                        <th style="width:10%" class="text-right">In-Hand Stock</th>
                                        <th style="width:10%" class="text-right">Units in POs</th>
                                        <th style="width:10%" class="text-right">Sale Units</th>
                                        <th style="width:10%" class="text-right">Available Units</th>
                                        <th style="width:10%" class="text-right">Damage Units</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-sm-12 inventory-btn">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>
<script src="@Url.Content("~/js/Inventory/ConsignmentInventory.js?v="+DateTime.Now.ToString("ddMMyyyymmss")+"")" asp-append-version="true"></script>

