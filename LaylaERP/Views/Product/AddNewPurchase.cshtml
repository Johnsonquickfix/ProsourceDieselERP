                                            <div class="col-sm-3">
                                                <input type="text" id="txtcurrencyconversionrate" class="form-control">
                                            </div>
                                        </div>

                                        <div class="form-group d-flex">
                                            <label class="col-sm-3 control-label">Price (currency) for this qty. (no discount)</label>
                                            <div class="col-sm-3">
                                                <input type="text" id="txtcurrencyconversionrate" class="form-control">
                                            </div>
                                            <div class="col-sm-6">
                                                <select id="ddltaxrate" class="form-control">
