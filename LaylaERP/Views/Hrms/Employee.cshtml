            <div class="form-group">
                <label for="JoiningDate">Joining Date</label>
                <div class="input-group">
                    <input type="text" id="txtJoiningDate" name="JoiningDate" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="LeavingDate">Leaving Date</label>
                <div class="input-group">
                    <input type="text" id="txtLeavingDate" name="LeavingDate" class="form-control">
