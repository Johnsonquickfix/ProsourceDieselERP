                                                    <option value="Dno">Do not order</option>
                                                </select>
                                            </div>
                                        </div>
                                       
                                        <div class="form-group d-flex">
                                            <div class="col-sm-8">
                                            </div>
                                            <div class="col-sm-2">
                                                <button id="btnbuyingsave" class="btn btn-danger">Saved</button>
                                            </div>
                                            <div class="col-sm-2">
                                                <button id="btnbuyingcl" class="btn btn-danger">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
