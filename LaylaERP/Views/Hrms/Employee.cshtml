<div class="page-title">
    <h2 class="page-heading">Create Employee</h2>
</div>
<section class="content section-content employees-section">
    <article class="box box-primary mb-4">
        <div class="box-header with-border">
            <h4 class="box-title">Basic Info</h4>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtFirstName" name="FirstName">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtLastName" name="LastName">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Gender">Gender</label>
                        <div class="input-group">
                            <select class="form-control select2" id="ddlGender" name="Gender">
                                <option selected="selected" value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="DateOfBirth">Date of Birth</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="txtdob" /><span class="even-space"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="PlaceOfBirth">Place of Birth</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtPlaceOfBirth" name="PlaceOfBirth">
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="PlaceOfBirth">Employee Type</label>
                        @*<div class="input-group">
                            <input class="form-control" type="text" id="txtType" name="PlaceOfBirth">
                        </div>*@

                        <select class="form-control select2" id="txtType" name="MaritalStatus">
                            <option selected="selected" value="1">Full Time</option>
                            <option value="2">Part Time</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="MaritalStatus">Marital Status</label>
                        <div class="input-group">
                            <select class="form-control select2" id="ddlMaritalStatus" name="MaritalStatus">
                                <option selected="selected" value="Single">Single</option>
                                <option value="Married">Married</option>
                                <option value="Remarried">Remarried</option>
                                <option value="Separated">Separated</option>
                                <option value="Divorced">Divorced</option>
                                <option value="Widowed">Widowed</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtEmail" name="Email">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtPhone" name="Phone">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Address1">Address1</label>
                <div class="input-group">
                    <input class="form-control" type="text" id="txtAddress1" name="Address1">
                </div>
            </div>
            <div class="form-group">
                <label for="Address2">Address2</label>
                <div class="input-group">
                    <input class="form-control" type="text" id="txtAddress2" name="Address2" value="">
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="City">City</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtCity" name="City">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="StateProvince">State</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtState" name="StateProvince">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="ZipCode">ZipCode</label>
                        <div class="input-group">
                            <input class="form-control" type="text" id="txtZipCode" name="ZipCode">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="Country">Country</label>
                <div class="input-group">
                    <input class="form-control" type="text" id="txtCountry" name="Country">
                </div>
            </div>
            <div title="Check Active">
                <input type="checkbox" id="chkemployeestatus" /><label for="Active">Active</label>
            </div>
        </div>
    </article>

