
@{
    ViewBag.Title = "Product Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-title">
    <h2 class="page-heading" id="lbltitle">Product Categories</h2>
</div>
<section class="content section-content category-section">
    <div class="row rowbox">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    Product categories for your store can be managed here. To change the order of categories on the front-end you can drag and drop to sort them. To see more categories listed click the "screen options" link at the top-right of this page.
                </div>
                <div class="box-header with-border">
                    <h2 class="box-title">Add new category</h2>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input type="text" class="form-control" />
                        <span class="form-info">The name is how it appears on your site.</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Slug</label>
                        <input type="text" class="form-control" />
                        <span class="form-info">The “slug” is the URL-friendly version of the name. It is usually all lowercase and contains only letters, numbers, and hyphens.</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Parent category</label>
                        <select class="form-control">
                            <option>None</option>
                            <option>Accessories</option>
                            <option>Base</option>
                            <option>Bedding</option>
                            <option>Blanket</option>
                            <option>Comp Pillow</option>
                            <option>Comp Topper</option>
                            <option>Mattress</option>
                            <option>Mattress Cover Gen 1</option>
                            <option>Pillow</option>
                            <option>Replacement Covers</option>
                            <option>Sheets</option>
                            <option>Shipping</option>
                            <option>Topper</option>
                            <option>Uncategorized</option>
                        </select>
                        <span class="form-info">
                            Assign a parent term to create a hierarchy. The term Jazz, for example, would be the parent of Bebop and Big Band.
                        </span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <textarea class="form-control"></textarea>
                        <span class="form-info">The description is not prominent by default; however, some themes may show it.</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Display type</label>
                        <select class="form-control">
                            <option>Default</option>
                            <option>Products</option>
                            <option>Subcategories</option>
                            <option>Both</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Thumbnail</label>
                        <div class="image-upload-box d-flex">
                            <img src="~/Images/varient_pic.png" class="" />
                            <div class="upload-btn-wrapper">
                                <button class="btn-upload btn btn-danger">Upload/Add Image</button>
                                <input type="file" name="myfile" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer text-right">
                    <button class="btn btn-danger">Add new category</button>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="user-top-section">
                        <div class="tablenav top tablenav-top2">
                            <div class="alignleft actions bulkactions">
                                <select class="form-control" id="ddlStatus">
                                    <option value="1">Bulk Action</option>
                                    <option value="2">Delete</option>
                                </select>
                                <button type="button" id="btnApply" class="btn btn-primary btn-flat button">Apply</button>
                            </div>
                            <div class="alignright actions bulkactions">
                                <input type="text" class="form-control"/>
                                <button type="button" id="btnApply" class="btn btn-primary btn-flat button">Search categories</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table-blue table check-table table-bordered">
                        <thead>
                            <tr role="row">
                                <th><input type="checkbox" name="checkAll" id="checkAll"><label></label></th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Count</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

