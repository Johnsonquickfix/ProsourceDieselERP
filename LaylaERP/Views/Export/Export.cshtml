@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            
            DatagridOrder();
            DatagridUsers();
        });

        function DatagridOrder() {
                $('#exportdata').DataTable({
                    "ajax": {
                        "url": '/Export/GetData',
                        "type": 'GET',
                        "dataType": 'json',
                        
                    },
                    "columns": [
                        { 'data': 'order_id' },
                        {
                            'data': 'order_created',
                            'render': function (jsonDate) {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                                return ("0" + date.getDate()).slice(-2) + '-' + month + '-' + date.getFullYear();
                            }
                        },
                        { 'data': 'customer_id' },
                        { 'data':'orderstatus' },
                        { 'data': 'qty' },
                        { 'data': 'subtotal' },
                        { 'data': 'total' }

                    ],
                    columnDefs: [{
                        orderable: false,
                        targets: [1]
                    }],
                    "order": [0, 'desc'],

                    "dom": 'Bfrtip',
                    "buttons": [

                        {
                            extend: 'csv',
                            className: 'button',
                            text: '<i class="fas fa-file-csv"></i> CSV'
                        },
                        {
                            extend: 'print',
                            className: 'button',
                            text: '<i class="fas fa-print"></i> Print'
                        }
                    ]
                });
        }
        function DatagridUsers() {
            $('#exportusersdata').DataTable({
                "ajax": {
                    "url": '/Export/UsersExport',
                    "type": 'GET',
                    "dataType": 'json',
                },
                "columns": [ 
                   
                    { 'data': 'UID', 'sWidth': "5%" },
                    { 'data': 'user_login', 'sWidth': "20%" },
                    { 'data': 'user_email', 'sWidth': "20%" },
                    { 'data': 'user_status', 'sWidth': "10%" },
                    { 'data': 'my', 'sWidth': "10%" },
                    //{
                    //    'data': 'created_date',
                    //    'render': function (jsonDate) {
                    //        var date = new Date(parseInt(jsonDate.substr(6)));
                    //        var month = ("0" + (date.getMonth() + 1)).slice(-2);
                    //        return ("0" + date.getDate()).slice(-2) + '-' + month + '-' + date.getFullYear();
                    //    }
                    //},

                ],
                "order":[0, 'desc'],
                "dom": 'Bfrtip',
                "buttons": [

                    {
                        extend: 'csv',
                        className: 'button',
                        text: '<i class="fas fa-file-csv"></i> CSV'
                    },
                    {
                        extend: 'print',
                        className: 'button',
                        text: '<i class="fas fa-print"></i> Print'
                    }
                ]
            });
        }
    </script>

   
