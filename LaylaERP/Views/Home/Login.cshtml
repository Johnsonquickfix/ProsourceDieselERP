@model LaylaERP.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Layla ERP | Log in</title>
    <link rel="icon" type="image/x-icon" href="~/Images/layla32.png">
    <link href="~/Content/AdminLTE-3.1.0/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- icheck bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/AdminLTE-3.1.0/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE-3.1.0/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/alert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/dx/dx.light.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/Content/AdminLTE-3.1.0/jquery/jquery.min.js"></script>
    <script src="~/Content/alert/sweetalert2.all.min.js"></script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="Login"><b>Layla </b>Sleep</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form>
                <div class="form-group has-feedback" style="margin-top:30px;">
                    <input type="email" id="txtUserId" class="form-control" placeholder="User Name" value="david003">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="txturPassword" class="form-control" placeholder="Password" value="Peter@007">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-12">
                        <span class="psw"> <a href="#" onclick="swal('Please contact Admin for Password')">Forgot password?</a></span>
                    </div>
                </div>
                <div class="normal" style="margin-top:30px;">
                    <button id="btnLogin" class="btn btn-block" style="background-color:#dd4b39; color:#fff; margin-top:20px;" type="button">LOGIN</button>
                </div>
            </form>

            <div class="social-auth-links text-center">

            </div>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/AdminLTE-3.1.0/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminLTE-3.1.0/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/AdminLTE-3.1.0/adminlte.min.js"></script>
    
    <script src="@Url.Content("~/js/Users/UserLogin.js?v=" + DateTime.Now.ToString("ddMMyyyymmss"))" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '#btnLogin', function () {
                userAuthenticateLogin();
            });
        });
    </script>
</body>
</html>


